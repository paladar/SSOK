{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h2 class="col-xs-6">Aktualno≈õci</h2>
        <div class="col-xs-12">
            <div class="newses">
                {% for news in newses | sortbyfield('createdAt') | reverse %}
                    <a href="{{ path('news', { 'id': news.id })}}">
                        <div class="news">
                            <h4>{{news.title}}</h4>
                            <p>
                                {% autoescape false %}
                                    {{ news.description | striptags }}
                                {% endautoescape %}
                            </p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="pagination">
            {% for i in 0..pages %}
                {% if i != 0 %}
                    {% if page == i %}
                        <a class="active-page" href="{{ path('newses', { 'page': i })}}">{{ i }}</a>
                    {% else %}
                        <a href="{{ path('newses', { 'page': i })}}">{{ i }}</a>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
