{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h2 class="col-xs-12">{{monday|date('d-m-Y')}} - {{monday|date_modify('+4 day')|date('d-m-Y')}}</h2>
        <div class="col-xs-12">
            {% include 'default/Teacher/myClassPresencesPlan.html.twig' with {'teacher' : teacher,'monday' : monday} %}
        </div>
    </div>
    <div class="row">
        <h2 class="col-xs-12">{{mondayBefore|date('d-m-Y')}} - {{mondayBefore|date_modify('+4 day')|date('d-m-Y')}}</h2>
        <div class="col-xs-12">
            {% include 'default/Teacher/myClassPresencesPlan.html.twig' with {'teacher' : teacher,'monday' : mondayBefore} %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            {% if monday|date_modify('-3 day')|date('Y-m-d') > minDate|date('Y-m-d') %}
                <a class="btn btn-ssok-left" href="{{ path('my_class_presences' ,{'id':schoolClass.id,'date': date+1 })}}">Poprzedni okres</a>
            {% endif %}
        </div>
        <div class="col-sm-6">
            {% if date != 0 and monday|date_modify('+7 day')|date('Y-m-d') < maxDate|date('Y-m-d') %}
                <a class="btn btn-ssok" href="{{ path('my_class_presences' ,{'id':schoolClass.id,'date': date-1 })}}">NastÄ™pny okres</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
