{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Kontakt</h1>
        <div class="col-xs-12">
            <table class="datatable table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ucze≈Ñ</th>
                        <th>Klasa</th>
                        <th>Email</th>
                        <th>Telefon</th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in students %}
                        <tr>
                            <td>{{ student.firstName }} {{ student.surname }}</td>
                            <td>{{ student.schoolclass.number }}{{ student.schoolclass.letter }}</td>
                            <td><a href="mailto:{{ student.email }}">{{ student.email }}</a></td>
                            <td>{{ student.phone }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
