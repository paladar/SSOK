{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Uwagi</h1>
        <div class="col-xs-12">
            {% for student in schoolClass.students %}
                <h5>{{student.firstname}} {{student.surname}}</h5>
            <ul>
                {% for comment in student.studentcomments %}
                    {% if comment.teacher.id == teacher.id %}
                        <li>{{comment.value}}</li>
                    {% endif %}
                {% endfor %}
            </ul>
            {% endfor %}
        </div>
    {% endblock %}
