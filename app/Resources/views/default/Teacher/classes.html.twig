{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Wybierz klasę</h1>
        <div class="col-xs-12">
            {% if schoolClasses|length == 0 %}
                Nie masz żadnych przypisanych przedmiotów!
            {% else %}
                <ul class="teacher-select">
                    {% for sc in schoolClasses %}
                        <a href="{{ path('gradeIndex' ,{'id': sc.id,'subjectId': subject.id })}}"><li>{{sc.number}}{{sc.letter}}</li></a>
                        {% endfor %}
                </ul>
            {% endif %}
        </div>
    {% endblock %}
