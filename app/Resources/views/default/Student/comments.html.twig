{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Oceny</h1>
        <div class="col-xs-12">
            {% if student.studentcomments is empty %}
                Brak uwag
            {% else %}
                <table class="studentTable table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nauczyciel</th>
                            <th>Uwaga</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in student.studentcomments %}
                            <tr>
                                <td>{{comment.teacher.firstname}} {{comment.teacher.surname}}</td>
                                <td style="width:auto;">{{comment.value}}</td>
                            {% endfor %}

                    </tbody>
                </table>
            {% endif %}
        </div>
    {% endblock %}
