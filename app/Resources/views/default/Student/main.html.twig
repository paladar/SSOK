<div class="row">
    <div class="col-sm-8">
        {% include 'default/Student/plan.html.twig' with {'schoolClass' : student.schoolClass} %}
    </div>
    <div class="col-sm-4">
        {% include 'default/Student/news.html.twig' with {'newses' : newses} %}
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <div class="row">
            <h2 class="col-xs-6">Ostanie oceny</h2>
            <div class="col-xs-12">
                <ul class="latest">
                    {% for grade in student.grades | sortbyfield('createdAt') %}
                        {% if loop.index <= 3 %}
                            <li>{{grade.subject.title}}: <span style="color:{{grade.gradetype.color}}">{{grade.value}}</span></li>
                            {% endif %}
                        {% endfor %}
                        {% if student.grades is empty %}
                        Brak ocen
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <div class="row">
            <h2 class="col-xs-6">ZastÄ™pstwa</h2>
            <div class="col-xs-12">
                <ul class="latest replecements">
                    {% for rep in replecements %}
                        <li><span>{{loop.index}}.</span>{{ rep.description | raw }}</li>
                        {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>