{% extends 'default/index.html.twig' %}

{% block content %}
    <h1>Students list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Surname</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Deletedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td><a href="{{ path('student_show', { 'id': student.id }) }}">{{ student.id }}</a></td>
                <td>{{ student.email }}</td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.surname }}</td>
                <td>{{ student.phone }}</td>
                <td>{{ student.address }}</td>
                <td>{% if student.createdAt %}{{ student.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if student.updatedAt %}{{ student.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if student.deletedAt %}{{ student.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('student_show', { 'id': student.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('student_edit', { 'id': student.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('student_new') }}">Create a new student</a>
        </li>
    </ul>
{% endblock %}
