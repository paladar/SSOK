{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Student #{{student.id}}</h1>
        <div class="col-xs-6"><a class="btn btn-ssok" href="{{ path('student_index') }}">Powrót do listy</a></div>
        <div class="col-xs-12 admin-show">
            <div class="admin-details">
                <div class="admin-label col-xs-3">Imię</div><div class="admin-content col-xs-9">{{student.firstname}}</div>
            </div>
            <div class="admin-details">
                <div class="admin-label col-xs-3">Nazwisko</div><div class="admin-content col-xs-9">{{student.surname}}</div>
            </div>
            <div class="admin-details">
                <div class="admin-label col-xs-3">Email</div><div class="admin-content col-xs-9">{{student.email}}</div>
            </div>
            <div class="admin-details">
                <div class="admin-label col-xs-3">Telefon</div><div class="admin-content col-xs-9">{{student.phone}}</div>
            </div>
            <div class="admin-details">
                <div class="admin-label col-xs-3">Adres</div><div class="admin-content col-xs-9">{{student.address}}</div>
            </div>
        </div>
        <div class="col-xs-12">
            <a class="btn btn-ssok" href="{{ path('student_edit', { 'id': student.id }) }}">Edytuj</a>
        </div>
    </div>
{% endblock %}
