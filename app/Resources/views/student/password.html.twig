{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Uczeń #{{student.id}}</h1>
        <div class="col-xs-6"><a class="btn btn-ssok" href="{{ path('teacher_index') }}">Powrót do listy</a></div>
        <div class="col-xs-12 admin-show">
            <div class="admin-details">
                <div class="admin-label col-xs-3">Użytkownik</div><div class="admin-content col-xs-9">{{username}}</div>
            </div>
            <div class="admin-details">
                <div class="admin-label col-xs-3">Domyślne hasło</div><div class="admin-content col-xs-9">{{password}}</div>
            </div>
        </div>
        <div class="col-xs-12">
            <a class="btn btn-ssok" href="{{ path('student_reset_password', { 'id': student.id }) }}">Resetuj hasło</a>
        </div>
    </div>
    <div class="row">
        <h1 class="col-xs-6">Rodzic #{{student.studentparent.id}}</h1>
        <div class="col-xs-12 admin-show">
            <div class="admin-details">
                <div class="admin-label col-xs-3">Użytkownik</div><div class="admin-content col-xs-9">{{parentusername}}</div>
            </div>
            <div class="admin-details">
                <div class="admin-label col-xs-3">Domyślne hasło</div><div class="admin-content col-xs-9">{{passwordparent}}</div>
            </div>
        </div>
        <div class="col-xs-12">
            <a class="btn btn-ssok" href="{{ path('student_parent_reset_password', { 'id': student.studentparent.id }) }}">Resetuj hasło</a>
        </div>
    </div>
{% endblock %}
