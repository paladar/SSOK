{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Edycja aktualności</h1>
        <div class="col-xs-6"><a class="btn btn-ssok" href="{{ path('information_index') }}">Powrót do listy</a></div>
        <div class="col-xs-12">
            {{ form_start(edit_form) }}
            {% form_theme edit_form 'form/form_theme.html.twig' %}
            {{ form_widget(edit_form) }}
        </div>
        <div class="col-xs-12">
            <input class="btn btn-ssok" type="submit" value="Edytuj" />
        </div>
        {{ form_end(edit_form) }}
        <div class="col-xs-12">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
