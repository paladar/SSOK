{% extends 'default/index.html.twig' %}

{% block content %}
    <h1>Grade</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grade.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ grade.value }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if grade.createdAt %}{{ grade.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if grade.updatedAt %}{{ grade.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if grade.deletedAt %}{{ grade.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('grade_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('grade_edit', { 'id': grade.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
