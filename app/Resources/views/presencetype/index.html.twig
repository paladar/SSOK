{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Lista typów obecności</h1>
        <div class="col-xs-6"><a class="btn btn-ssok" href="{{ path('presencetype_new') }}">Dodaj typ obecności</a></div>
        <div class="col-xs-12">
            <table class="datatable table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Skrót</th>
                        <th>Opis</th>
                        <th>Czy liczony jako nieobecny?</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    {% for presenceType in presenceTypes %}
                        <tr>
                            <td><a href="{{ path('presencetype_show', { 'id': presenceType.id }) }}">{{ presenceType.id }}</a></td>
                            <td>{{ presenceType.label }}</td>
                            <td>{{ presenceType.description }}</td>
                            <td>{% if presenceType.countAsAbsence %}Tak{% else %}Nie{% endif %}</td>
                            <td>
                                <ul class="actions">
                                    <li>
                                        <a href="{{ path('presencetype_show', { 'id': presenceType.id }) }}">Pokaż</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('presencetype_edit', { 'id': presenceType.id }) }}">Edytuj</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
