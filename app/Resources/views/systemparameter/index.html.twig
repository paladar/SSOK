{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-xs-6">Parametry systemowe</h1>
        <div class="col-xs-12">
            <table class="datatable table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nazwa</th>
                        <th>Opis</th>
                        <th>Wartość</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    {% for sp in systemParameters %}
                        <tr>
                            <td>{{ sp.label }}</td>
                            <td>{{ sp.description }}</td>
                            <td>{{ sp.value }}</td>
                            <td>
                                <ul class="actions">
                                    <li>
                                        <a href="{{ path('systemparameter_edit', { 'id': sp.id }) }}"   ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
